---
import { getFeaturedProjects } from '@/data/projects';
import Button from '@/components/ui/Button.astro';
import Icon from '@/components/ui/Icon.astro';

const featured = getFeaturedProjects();
---

<section class="py-24">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="mb-12 flex flex-col justify-between md:flex-row md:items-end">
      <div>
        <h2 class="mb-4 text-3xl font-bold md:text-4xl">
          <span class="text-primary font-mono">//</span> Featured Projects
        </h2>
        <p class="text-muted-foreground max-w-xl">
          Highlights from my work in infrastructure, automation, and reliability engineeringâ€”with
          the impact and role called out.
        </p>
      </div>
      <Button href="/projects" variant="ghost" class="group mt-4 md:mt-0">
        View All Projects
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="ml-2 h-4 w-4 transition-transform group-hover:translate-x-1"
          ><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg
        >
      </Button>
    </div>

    <!-- Projects Grid -->
    <div class="grid auto-rows-fr grid-cols-1 gap-6 md:grid-cols-2 xl:grid-cols-3">
      {
        featured.map((project, index) => (
          <article
            class="group bg-card border-border card-hover animate-fade-in flex h-full flex-col overflow-hidden rounded-lg border"
            style={`animation-delay: ${index * 0.1}s`}
          >
            {/* Project Header */}
            <div class="border-border bg-secondary/30 border-b p-6">
              <div class="mb-4 flex items-center justify-between">
                <Icon name="folder" class="text-primary h-10 w-10" />
                <div class="flex gap-2">
                  {project.github && (
                    <a
                      href={project.github}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-muted-foreground hover:text-foreground transition-colors"
                      aria-label="GitHub repository"
                    >
                      <Icon name="github" class="h-5 w-5" />
                    </a>
                  )}
                  {project.demo && (
                    <a
                      href={project.demo}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-muted-foreground hover:text-foreground transition-colors"
                      aria-label="Live demo"
                    >
                      <Icon name="external" class="h-5 w-5" />
                    </a>
                  )}
                </div>
              </div>
              <h3 class="text-foreground group-hover:text-primary line-clamp-1 flex items-center gap-2 text-lg font-semibold transition-colors">
                <a href={`/projects/${project.id}`}>{project.title}</a>
                <span class="bg-primary/90 text-primary-foreground rounded px-2 py-0.5 font-mono text-xs font-medium">
                  Featured
                </span>
              </h3>
            </div>

            {/* Project Content */}
            <div class="flex flex-1 flex-col gap-4 p-6">
              <p class="text-muted-foreground text-sm">{project.description}</p>
              <div class="border-border/60 bg-secondary/30 rounded-lg border p-3">
                <p class="text-primary mb-1 font-mono text-xs">Why it matters</p>
                <p class="text-foreground text-sm">{project.impact}</p>
              </div>
              <div class="flex flex-wrap items-center gap-2">
                <span class="bg-secondary text-muted-foreground border-border/60 rounded-full border px-2 py-1 text-sm">
                  Role: {project.role}
                </span>
                {project.tags.map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>
