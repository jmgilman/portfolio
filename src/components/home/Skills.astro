---
import { skills } from '@/data/profile';
import SkillCard from '@/components/ui/SkillCard.astro';

const skillCategories = [
  {
    title: 'Cloud & Kubernetes',
    skills: skills.cloud,
    color: 'text-primary',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17.5 19H9a7 7 0 1 1 6.71-9h1.79a4.5 4.5 0 1 1 0 9Z"/></svg>`,
  },
  {
    title: 'Infrastructure as Code & Automation',
    skills: skills.automation,
    color: 'text-terminal-yellow',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="16 18 22 12 16 6"/><polyline points="8 6 2 12 8 18"/></svg>`,
  },
  {
    title: 'Languages & Scripting',
    skills: skills.programming,
    color: 'text-terminal-cyan',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="4 17 10 11 4 5"/><line x1="12" x2="20" y1="19" y2="19"/></svg>`,
  },
  {
    title: 'Reliability & Observability',
    skills: skills.reliability,
    color: 'text-accent',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="16" height="16" x="4" y="4" rx="2"/><rect width="6" height="6" x="9" y="9" rx="1"/><path d="M15 2v2"/><path d="M15 20v2"/><path d="M2 15h2"/><path d="M2 9h2"/><path d="M20 15h2"/><path d="M20 9h2"/><path d="M9 2v2"/><path d="M9 20v2"/></svg>`,
  },
];
---

<section class="bg-secondary/30 py-24">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="mb-16 text-center">
      <h2 class="mb-4 text-3xl font-bold md:text-4xl">
        <span class="text-muted-foreground font-mono">&lt;</span>
        <span class="text-foreground">Skills</span>
        <span class="text-muted-foreground font-mono">/&gt;</span>
      </h2>
      <p class="text-muted-foreground mx-auto max-w-2xl">
        What I rely on daily to keep platforms reliable, observable, secure, and cost-aware without
        slowing teams down.
      </p>
    </div>

    <!-- Skills Grid -->
    <div class="mx-auto grid max-w-5xl grid-cols-1 gap-6 md:grid-cols-2">
      {
        skillCategories.map((category, index) => (
          <SkillCard
            title={category.title}
            iconColor={category.color}
            class="animate-fade-in"
            style={`animation-delay: ${index * 0.1}s`}
          >
            <Fragment slot="icon" set:html={category.icon} />
            <div class="flex flex-wrap gap-2">
              {category.skills.map((skill) => (
                <span class="tag">{skill}</span>
              ))}
            </div>
          </SkillCard>
        ))
      }
    </div>
  </div>
</section>
