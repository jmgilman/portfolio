---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import Button from '@/components/ui/Button.astro';
import TerminalCard from '@/components/ui/TerminalCard.astro';
import { profile } from '@/data/profile';

const socialLinks = [
  {
    label: 'LinkedIn',
    href: profile.social.linkedin,
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/></svg>`,
  },
  {
    label: 'GitHub',
    href: profile.social.github,
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>`,
  },
  {
    label: 'Twitter',
    href: profile.social.twitter,
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"/></svg>`,
  },
];
---

<Layout
  title="Contact - Joshua Gilman"
  description="Get in touch to discuss opportunities, projects, or collaboration."
>
  <Header slot="header" />

  <div class="py-24">
    <div class="container mx-auto px-4">
      <!-- Header -->
      <div class="mb-12 max-w-3xl">
        <h1 class="mb-4 text-4xl font-bold md:text-5xl">
          <span class="text-primary font-mono">&gt;</span> Contact
        </h1>
        <p class="text-muted-foreground text-lg">
          Have a project in mind or want to discuss opportunities? I respond within 24-48 hours and
          prefer concise, outcome-focused chats.
        </p>
        <div class="mt-6 flex flex-wrap gap-3">
          <Button href="https://calendly.com/joshuagilman/30min" class="group">
            Book a 30-min intro
          </Button>
          <Button href="/resume" variant="outline"> View resume </Button>
        </div>
      </div>

      <div class="grid max-w-5xl grid-cols-1 gap-12 lg:grid-cols-2">
        <!-- Contact Form -->
        <div>
          <!-- Success Message -->
          <div
            id="success-message"
            class="border-primary/50 bg-primary/10 mb-6 hidden rounded-lg border p-4"
          >
            <p class="text-primary flex items-center gap-2 font-mono text-sm">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline
                  points="22 4 12 14.01 9 11.01"></polyline></svg
              >
              Message sent successfully! I'll get back to you soon.
            </p>
          </div>
          <TerminalCard title="send-message.sh" class="h-full">
            <form
              id="contact-form"
              class="space-y-4"
              action="https://api.web3forms.com/submit"
              method="POST"
            >
              <input type="hidden" name="access_key" value="48b8e1e5-9843-496a-9567-4c109e854272" />
              <input type="hidden" name="from_name" value="jmgilman.com Contact Form" />
              <input
                type="hidden"
                name="redirect"
                value="https://jmgilman.com/contact?success=true"
              />
              <input type="checkbox" name="botcheck" class="hidden" style="display: none;" />
              <div>
                <label for="name" class="text-muted-foreground mb-2 block font-mono text-sm">
                  <span class="text-primary">$</span> name
                </label>
                <input
                  id="name"
                  name="name"
                  type="text"
                  required
                  class="bg-background border-input focus:ring-ring w-full rounded-md border px-3 py-2 font-mono text-sm focus:ring-2 focus:ring-offset-2 focus:outline-none"
                  placeholder="John Doe"
                />
              </div>

              <div>
                <label for="email" class="text-muted-foreground mb-2 block font-mono text-sm">
                  <span class="text-primary">$</span> email
                </label>
                <input
                  id="email"
                  name="email"
                  type="email"
                  required
                  class="bg-background border-input focus:ring-ring w-full rounded-md border px-3 py-2 font-mono text-sm focus:ring-2 focus:ring-offset-2 focus:outline-none"
                  placeholder="john@example.com"
                />
              </div>

              <div>
                <label for="subject" class="text-muted-foreground mb-2 block font-mono text-sm">
                  <span class="text-primary">$</span> subject
                </label>
                <input
                  id="subject"
                  name="subject"
                  type="text"
                  required
                  class="bg-background border-input focus:ring-ring w-full rounded-md border px-3 py-2 font-mono text-sm focus:ring-2 focus:ring-offset-2 focus:outline-none"
                  placeholder="Job Opportunity"
                />
              </div>

              <div>
                <label for="message" class="text-muted-foreground mb-2 block font-mono text-sm">
                  <span class="text-primary">$</span> message
                </label>
                <textarea
                  id="message"
                  name="message"
                  required
                  rows="5"
                  class="bg-background border-input focus:ring-ring min-h-[150px] w-full resize-y rounded-md border px-3 py-2 font-mono text-sm focus:ring-2 focus:ring-offset-2 focus:outline-none"
                  placeholder="Your message here..."></textarea>
              </div>

              <Button type="submit" class="group w-full">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="mr-2 transition-transform group-hover:translate-x-1"
                  ><path d="m22 2-7 20-4-9-9-4Z"></path><path d="M22 2 11 13"></path></svg
                >
                Send Message
              </Button>
            </form>
          </TerminalCard>
        </div>

        <!-- Contact Info -->
        <div class="space-y-6">
          <TerminalCard title="contact-info.json">
            <div class="space-y-4">
              <div class="flex items-start gap-3">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="text-primary mt-0.5"
                  ><rect width="20" height="16" x="2" y="4" rx="2"></rect><path
                    d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path></svg
                >
                <div>
                  <p class="text-muted-foreground mb-1 font-mono text-xs">email:</p>
                  <a
                    href={`mailto:${profile.email}`}
                    class="text-foreground hover:text-primary transition-colors"
                  >
                    {profile.email}
                  </a>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="text-primary mt-0.5"
                  ><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path><circle
                    cx="12"
                    cy="10"
                    r="3"></circle></svg
                >
                <div>
                  <p class="text-muted-foreground mb-1 font-mono text-xs">location:</p>
                  <p class="text-foreground">{profile.location}</p>
                </div>
              </div>
            </div>
          </TerminalCard>

          <TerminalCard title="social-links.sh">
            <div class="space-y-3">
              {
                socialLinks.map((link) => (
                  <a
                    href={link.href}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-muted-foreground hover:text-primary group flex items-center gap-3 transition-colors"
                  >
                    <Fragment set:html={link.icon} />
                    <span class="font-mono text-sm">{link.label}</span>
                    <span class="text-xs opacity-0 transition-opacity group-hover:opacity-100">
                      &rarr; Open
                    </span>
                  </a>
                ))
              }
            </div>
          </TerminalCard>

          <div class="bg-code border-border rounded-lg border p-6">
            <p class="text-muted-foreground font-mono text-sm">
              <span class="text-primary">// </span>
              I typically respond within 24-48 hours. For urgent matters, LinkedIn messages tend to get
              the fastest response.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <Footer slot="footer" />
</Layout>

<script>
  // Show success message if redirected from form submission
  const showSuccessMessage = () => {
    const params = new URLSearchParams(window.location.search);
    if (params.get('success') === 'true') {
      const successMessage = document.getElementById('success-message');
      if (successMessage) {
        successMessage.classList.remove('hidden');
        // Scroll to top to show the message
        window.scrollTo({ top: 0, behavior: 'smooth' });
        // Clean up URL
        window.history.replaceState({}, '', window.location.pathname);
      }
    }
  };

  showSuccessMessage();
  document.addEventListener('astro:page-load', showSuccessMessage);
</script>
